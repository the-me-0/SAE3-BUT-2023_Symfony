{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block style %}

    <link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="content">
        <form method="post">
            <div class="form">
                <h1 class="h3 mb-3 font-weight-normal">Profil</h1>
                {{ form_start(user_form) }}
                <label for="inputUsername">Nom d'utilisateur</label>
                <div class="infos">
                    {{ form_row(user_form.username, {
                        label: false
                    }) }}
                </div>
                
                <label for="lastName">Nom</label>
                <div class="info">
                    {{ form_row(user_form.lastName, {
                        label: false
                    }) }}
                </div>
                <label for="lastName">Description</label>
                <div class="info description">
                    {{ form_row(user_form.description, {
                        label: false
                    }) }}
                </div>
                {{ form_widget(user_form._token) }}


                <a href="/profil/passwordedit" class="registerBtn">Modifier son Mot de passe</a>

                <button type="submit" class="btn btn-lg btn-primary">Valider</button>
                {{ form_end(user_form, {'render_rest': false}) }}
            </div>
        </form>
    </div>

{% endblock %}
